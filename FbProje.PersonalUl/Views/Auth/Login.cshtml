     html,
body {
  height: 100%;
}

body {
  display: flex;
  align-items: center;
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #f5f5f5;
}

.form-signin {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}

.form-signin .checkbox {
  font-weight: 400;
}

.form-signin .form-floating:focus-within {
  z-index: 2;
}

.form-signin input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}

.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
    </style>

    
    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    
<main class="form-signin">
  <form asp-action="Login" method="post">
   
    <h1 class="h3 mb-3 fw-normal">Kullanıcı Girişi</h1>

    <div class="form-floating">
       <label for="UserName class="sr-only"> <span  asp-validation-for="@Model.Username"></span></label>
      <input asp-for="@Model.Username" type="text" class="form-control" id="floatingInput" placeholder="Email">
       </div>
    <div class="form-floating">
        <label for="Password" class="sr-only"><span  asp-validation-for="@Model.Password"></span>  </label>
      <input asp-for="@Model.Password" type="password" class="form-control" id="floatingPassword" placeholder="Şifre">
    </div>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" asp-for="@Model.RememberMe" > Beni Hatırla
      </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş Yap</button>
  </form>
</main>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
    
  </body>
</html>


