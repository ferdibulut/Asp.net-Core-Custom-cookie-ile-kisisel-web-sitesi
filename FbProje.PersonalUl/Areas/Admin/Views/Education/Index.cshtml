@model List<Education>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/View.cshtml";
}
<div style="float:right">
<a asp-action="add" asp-controller="Education" class="btn btn-outline-dark">Yeni Kayıt</a>
</div>
<div class="container">
<div class="col-11">
<table class="table table-hover table-striped table-bordered table-sm">
   <thead>
       <tr>
           <th>
             Egitim Aldıgı Kurum
           </th>
           <th>
              Egitim Alanı
           </th>
           <th>
               Başlangıc Tarihi
           </th>
           <th>
               Bitiş Tarihi
           </th>
           <th>
               Derecesi
           </th>
           <th>
               İşlem
           </th>
       </tr>
   </thead>
    <tbody>
    @foreach (var item in Model)
   {
       <tr>
           <td>
               @item.Title
           </td>
           <td>
              @item.SubTitle
           </td>
           <td>
               @item.StartDate
           </td>
           <td>
               @item.EndDate
           </td>
           <td>
               @item.Description
           </td>
           <td>
              <a asp-action="Update" asp-controller="Education" asp-route-id="@item.Id" class="btn btn-warning btn-sm mr-1">Güncelle</a>
              <a onclick="return confirm('Silmek İstediginizden Eminmisiniz?')" asp-action="Delete" asp-controller="Education" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a> 
           </td>
       </tr>
   }
   </tbody></div>
</table>
</div>

