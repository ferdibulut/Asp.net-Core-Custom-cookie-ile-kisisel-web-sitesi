@model InterestUpdateDto
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/View.cshtml";
}
<form asp-action="Update" asp-controller="Interest" method="post">
    <input type="hidden" asp-for="@Model.Id"/> 
    <div class="form-group">
         <label>Hobi bilgisi:</label><span asp-validation-for="@Model.Description"></span>
         <input  type="text" asp-for="@Model.Description" class="form-control"/>
     </div>
     <div class="form-group">
         <button type="submit" class="btn btn-primary">Kaydet</button>
     </div>
</form>

