@model AppUserUpdateModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/View.cshtml";
}

<div class="container">
    <form asp-action="Index" asp-controller="AdminHome" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.Id"/>
        <div class="form-group">
            <label>Adınız:</label><span asp-validation-for="@Model.FirstName"></span>
            <input type="text" asp-for="@Model.FirstName" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Soyadınız:</label><span asp-validation-for="@Model.LastName"></span>
            <input type="text" asp-for="@Model.LastName" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Email:</label><span asp-validation-for="@Model.Email"></span>
            <input type="Email" asp-for="@Model.Email" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Telefon Numaranız:</label><span asp-validation-for="@Model.PhoneNumber"></span>
            <input type="number" asp-for="@Model.PhoneNumber" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Ön Yazı:</label><span asp-validation-for="@Model.ShortDescription"></span>
            <input type="text" asp-for="@Model.ShortDescription" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Adresiniz:</label><span asp-validation-for="@Model.Address"></span>
            <input type="text" asp-for="@Model.Address" class="form-control"/>
        </div>
        <div class="row my-4">
             <div class="col-6  justify-content-center">@{
                if (!string.IsNullOrWhiteSpace(@Model.ImageUrl))
                {
                        <div class="center text-center"> <label>Bir Önceki Resminiz</label><img style="width:4rem!important;height:4rem!important;" src="/img/@Model.ImageUrl" /></div>

                }
                else
                {
                        <div class="text-center">Kayıtlı Resminiz Bulunmamaktadır</div>
                }
                }
           </div>
            <div class="col-6 align-items-center ">
               <div class="center text-center"><input type="file" class="form-control-file" /></div> 
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Kaydet"/>
        </div>
    </form>
</div>
