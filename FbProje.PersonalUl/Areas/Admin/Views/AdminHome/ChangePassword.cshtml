@model AppUserPasswordDto
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/View.cshtml";
}
<div class="alert alert-warning">
    <p>
        <strong>
            Uyarı
        </strong>Şifreniz degiştirildikden sonra otomatik cıkış yaptırılacak
    </p>
</div>
<div class="container">
    <div class="row">
    <div class="col-6">
<form asp-action="ChangePassword" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <labe>Parolanız:</labe><span class="text-danger" asp-validation-for="@Model.Password"></span>
        <input type="password" class="form-control" asp-for="Password"/>
    </div>
    <div class="form-group">
        <label>Parolanız (tekrar)</label><span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
        <input type="password" class="form-control"  asp-for="@Model.ConfirmPassword"/>
    </div>
    <div class="form-group my-2">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>
</div>
</div>
</div>